<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta property="og:type" content="website">
    <meta content="summary_large_image" name="twitter:card">
    <meta content="width=device-width, initial-scale=1" name="viewport">

    <!-- Meta for SEO -->
    {{#if page.description }}
        <meta content="{{ page.description }}" name="description">
        <meta content="{{ page.description }}" name="og:description">
        <meta content="{{ page.description }}" name="twitter:description">
    {{else}}
        <meta content="{{ site.seo_description }}" name="description">
    {{/if}}

    {{#if page.title }}
        <meta content="{{ page.title }} | {{ site.name }}" property="og:title">
        <meta content="{{ page.title }} | {{ site.name }}" property="twitter:title">
        <title>{{ page.title }} | {{ site.name }}</title>
    {{else}}
        <meta content="{{ site.seo_title }} | {{ site.name }}" property="og:title">
        <meta content="{{ site.seo_title }} | {{ site.name }}" property="twitter:title">
        <title>{{ site.seo_title }} | {{ site.name }}</title>
    {{/if}}

    <link rel="canonical" href="{{ page.canonUrl }}" />
    <link rel="icon" type="image/x-icon" href="/logos/amel-logo.png">

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Jacques+Francois&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap" rel="stylesheet">

    <!-- CSS -->
    <link href="/css/normalize.css" rel="stylesheet" type="text/css">
    <link href="/css/theme.css" rel="stylesheet" type="text/css">
    <link href="/css/main.css" rel="stylesheet" type="text/css">
    <link href="/css/tailwind-output.css" rel="stylesheet" type="text/css">
</head>
<body>
    <!-- Main Nav -->
    <header class="py-3 lg:py-6 lg:px-16 px-3 w-full sticky top-0 z-10">
        <div class="bg-dark-green md:py-6 py-3 xl:px-16 px-3 w-full mx-auto max-w-[{{ theme.page_width }}]">
            <div id="hamburgerMenu" class="lg:hidden flex flex-col items-end cursor-pointer">
                <div class="w-5 bg-light-cream h-[2px] mb-1"></div>
                <div class="w-5 bg-light-cream h-[2px] mb-1"></div>
                <div class="w-5 bg-light-cream h-[2px] mb-1"></div>
            </div>
            <nav class="flex gap-6 justify-center items-center">
